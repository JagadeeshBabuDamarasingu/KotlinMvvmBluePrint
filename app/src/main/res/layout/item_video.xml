<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dimen_sixteen">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/thumb_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/indicator"
                android:layout_width="@dimen/dimen_thirty_two"
                android:layout_height="@dimen/dimen_thirty_two"
                app:layout_constraintRight_toRightOf="@id/thumb_image"
                app:layout_constraintTop_toTopOf="@id/thumb_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>